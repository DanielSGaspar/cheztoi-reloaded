<div class="container">
<h1 class="mt-3">Message from <%= @message.first_name.capitalize %> <%= @message.last_name.capitalize %></h1>

<div class="d-flex justify-content-between">
  <h4>Number of guests: <%= @message.guests %></h4>
  <h4>Requested date: <%= @message.date %></h4>
</div>
<div class="d-flex justify-content-between">
  <h4>Client email: <%= @message.email_address %></h4>
  <h4>Client phone number: <%= @message.phone_number %></h4>
</div>
<h3>Message:</h3>
<p><%= @message.message %></p>


</div>
