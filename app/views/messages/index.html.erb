<div class="container">
  <h1 class="mt-3">My Messages</h1>


  <div class="mt-3">
    <% @messages.each do |message| %>
      <%= link_to message_path(message) do%>
        <div style="border: 1px solid grey;">
          <div class="d-flex justify-content-between mt-3">
            <p>From: <%= message.first_name %></p>
            <p>Message: <%= message.message.first(25) %>..</p>
            <p>Requested Date: <%= message.date %></p>
            <p>Received at: <%= message.created_at %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
