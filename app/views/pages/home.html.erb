<%# Messaging %>
<div style="background-color: black;">
  <div class="container py-5" style="color: white;">
    <%= simple_form_for @message do |f| %>
      <div class="row">
        <div class="col-6">
          <%= f.input :first_name %>
        </div>
        <div class="col-6">
          <%= f.input :last_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :date %>
        </div>
        <div class="col-6">
          <%= f.input :guests %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :email_address %>
        </div>
        <div class="col-6">
          <%= f.input :phone_number %>
        </div>
      </div>
      <%= f.input :message %>
      <%= f.button :submit, class:"btn btn-primary" %>
    <% end %>
  </div>
</div>


